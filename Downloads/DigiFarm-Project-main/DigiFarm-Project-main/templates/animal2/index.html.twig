{% extends 'basefront.html.twig' %}

{% block title %}Animal index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Animal index</h1>

        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Type</th>
                    <th>Age</th>
                    <th>Poids</th>
                    <th>Race</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for animal in animals %}
                <tr>
                    <td>{{ animal.id }}</td>
                    <td>{{ animal.nom }}</td>
                    <td>{{ animal.type }}</td>
                    <td>{{ animal.age }}</td>
                    <td>{{ animal.poids }}</td>
                    <td>{{ animal.race }}</td>
                    <td>
                        <a href="{{ path('app_animal_show', {'id': animal.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_animal_edit', {'id': animal.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_animal_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}
