{% extends 'baseback.html.twig' %}

{% block title %}Animal Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Animal Details</h2>
            </div>
            <div class="card-body">
                <style>
                    .detail-row {
                        background-color: #2b2b2b;
                        color: #ffffff;
                        border-radius: 8px;
                        margin-bottom: 1rem;
                    }
                    .detail-label {
                        background-color: #1a1a1a;
                        padding: 1rem;
                        border-radius: 8px 0 0 8px;
                        font-weight: bold;
                    }
                    .detail-value {
                        padding: 1rem;
                    }
                </style>

                <div class="row">
                    <div class="col-12">
                        <div class="row detail-row">
                            <div class="col-md-3 detail-label">ID</div>
                            <div class="col-md-9 detail-value">{{ animal.id }}</div>
                        </div>
                        <div class="row detail-row">
                            <div class="col-md-3 detail-label">Nom</div>
                            <div class="col-md-9 detail-value">{{ animal.nom }}</div>
                        </div>
                        <div class="row detail-row">
                            <div class="col-md-3 detail-label">Type</div>
                            <div class="col-md-9 detail-value">{{ animal.type }}</div>
                        </div>
                        <div class="row detail-row">
                            <div class="col-md-3 detail-label">Age</div>
                            <div class="col-md-9 detail-value">{{ animal.age }}</div>
                        </div>
                        <div class="row detail-row">
                            <div class="col-md-3 detail-label">Poids</div>
                            <div class="col-md-9 detail-value">{{ animal.poids }}</div>
                        </div>
                        <div class="row detail-row">
                            <div class="col-md-3 detail-label">Race</div>
                            <div class="col-md-9 detail-value">{{ animal.race }}</div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <div>
                        <a href="{{ path('app_animal_index') }}" class="btn btn-outline-secondary">Back to List</a>
                        <a href="{{ path('app_animal_edit', {'id': animal.id}) }}" class="btn btn-primary me-2">Edit</a>
                        {{ include('animal/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
