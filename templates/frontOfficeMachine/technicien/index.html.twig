{% extends 'base_front_etude.html.twig' %}

{% block title %}Technicien Index{% endblock %}



{% block body %}
    <div class="technicien-index">
        <h1>Technicien Index</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Prenom</th>
                    <th>Specialite</th>
                    <th>Email</th>
                    <th>Telephone</th>
                    <th>Localisation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for technicien in techniciens %}
                <tr>
                    <td>{{ technicien.id }}</td>
                    <td>{{ technicien.name }}</td>
                    <td>{{ technicien.prenom }}</td>
                    <td>{{ technicien.specialite }}</td>
                    <td>{{ technicien.email }}</td>
                    <td>{{ technicien.telephone }}</td>
                    <td>{{ technicien.localisation }}</td>
                    <td>
                        <a class="button" href="{{ path('app_technicien_show', {'id': technicien.id}) }}">Show</a>
                        <a class="button" href="{{ path('app_technicien_edit', {'id': technicien.id}) }}">Edit</a>
                        <form method="post" action="{{ path('app_technicien_delete', {'id': technicien.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ technicien.id) }}">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

  <center>      <a  href="{{ path('app_technicien_new') }}" class="button" >Create new</a> </center>
    </div>
{% endblock %}
