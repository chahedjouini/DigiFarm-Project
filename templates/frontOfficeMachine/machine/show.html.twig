{% extends 'base_front_etude.html.twig' %}

{% block title %}Machine Details{% endblock %}



{% block body %}
    <div class="machine-details">
        <h1></h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ machine.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ machine.nom }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ machine.type }}</td>
                </tr>
                <tr>
                    <th>Purchase Date</th>
                    <td>{{ machine.dateAchat ? machine.dateAchat|date('Y-m-d') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th>Condition</th>
                    <td>{{ machine.etat.value }}</td>
                </tr>
                <tr>
                    <th>Previous Condition</th>
                    <td>{{ machine.etatPred }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
       <center>      <a class="button" href="{{ path('app_machine_index') }}">Back to list</a></center> 
       <center>     <a class="button" href="{{ path('app_machine_edit', {'id': machine.id}) }}">Edit</a></center> 
        </div>

        <div class="mt-3">
            {{ include('frontOfficeMachine/machine/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
