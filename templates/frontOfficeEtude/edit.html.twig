{% extends 'base_user.html.twig' %}

{% block body %}
    <div class="form-box">
        <div class="form">
            <h1 class="title">Modifier</h1>
            <p class="subtitle">Modifiez les coordonnées.</p>

            <!-- Form content -->
            {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

            <!-- Buttons -->
            <div class="button-container">
                <button type="submit" class="btn">Update</button>
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>

        <!-- Back to list -->
        <div class="form-section">
            <a href="{{ path('app_user_index') }}">Back to list</a>
        </div>
    </div>

    <style>
        /* From Uiverse.io by alexruix */ 
        .form-box {
            max-width: 300px;
            background: #f1f7fe;
            overflow: hidden;
            border-radius: 16px;
            color: #010101;
            margin: 0 auto; /* Centrer le formulaire */
            padding: 20px;
        }

        .form {
            position: relative;
            display: flex;
            flex-direction: column;
            padding: 32px 24px 24px;
            gap: 16px;
            text-align: center;
        }

        /* Form text */
        .title {
            font-weight: bold;
            font-size: 1.6rem;
        }

        .subtitle {
            font-size: 1rem;
            color: #666;
        }

        /* Align label and input inline */
        .form-container {
            overflow: hidden;
            border-radius: 8px;
            background-color: #fff;
            margin: 1rem 0 .5rem;
            width: 100%;
        }

        .input {
            background: none;
            border: 0;
            outline: 0;
            height: 40px;
            width: 100%;
            border-bottom: 1px solid #eee;
            font-size: .9rem;
            padding: 8px 15px;
        }

        .form-row {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }

        .form-row label {
            width: 120px;
            font-weight: bold;
        }

        .form-row input {
            flex-grow: 1;
        }

        .form-section {
            padding: 16px;
            font-size: .85rem;
            background-color: #e0ecfb;
            box-shadow: rgb(0 0 0 / 8%) 0 -1px;
            text-align: center;
        }

        .form-section a {
            font-weight: bold;
            color: #28a745; /* Vert */
            transition: color .3s ease;
        }

        .form-section a:hover {
            color: #218838; /* Vert foncé */
            text-decoration: underline;
        }

        /* Button Container for alignment */
        .button-container {
            display: flex;
            justify-content: center; /* Centrer les boutons */
            gap: 20px; /* Espacement entre les boutons */
        }

        /* Button styles */
        .btn {
            background-color: #28a745; /* Vert */
            color: #fff;
            border: 0;
            border-radius: 24px;
            padding: 10px 16px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color .3s ease;
        }

        .btn:hover {
            background-color: #218838; /* Vert foncé */
        }
    </style>
{% endblock %}
