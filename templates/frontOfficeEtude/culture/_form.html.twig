{% extends 'base_front_etude.html.twig' %}

{% block title %}🌾 Nouvelle Culture Agricole {% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center mb-4 text-success">🌱 Ajouter une Nouvelle Culture</h2>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label fw-bold">🌿 Nom de la culture:</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.nom) }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">📏 Surface (hectares):</label>
            {{ form_widget(form.surface, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.surface) }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">🌱 Date de plantation:</label>
            {{ form_widget(form.date_plantation, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.date_plantation) }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">📅 Date de récolte:</label>
            {{ form_widget(form.date_recolte, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.date_recolte) }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">📍 Région:</label>
            {{ form_widget(form.region, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.region) }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">🌾 Type de culture:</label>
            {{ form_widget(form.type_culture, {'attr': {'class': 'form-select'}}) }}
            <div class="text-danger">{{ form_errors(form.type_culture) }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">🌿 Densité de plantation (par hectare):</label>
            {{ form_widget(form.densite_plantation, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.densite_plantation) }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">💧 Besoins en eau (m³/hectare):</label>
            {{ form_widget(form.besoins_eau, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.besoins_eau) }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">🌱 Besoins en engrais:</label>
            {{ form_widget(form.besoins_engrais, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.besoins_engrais) }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">📈 Rendement moyen (tonnes/hectare):</label>
            {{ form_widget(form.rendement_moyen, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.rendement_moyen) }}</div>
        </div>

        <div class="col-md-6">
            <label class="form-label fw-bold">💰 Coût moyen (€):</label>
            {{ form_widget(form.cout_moyen, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.cout_moyen) }}</div>
        </div>
    </div>

    <!-- 🌿 Boutons d'action -->
    <div class="text-center mt-4">
        <button type="submit" class="btn btn-light text-success fw-bold px-4">🚜 Sauvegarder</button>
        <a href="{{ path('app_culture_index', {'context': app.request.get('context')}) }}" class="btn btn-dark px-4">❌ Annuler</a>
    </div>

    {{ form_end(form) }}
</div>

<style>
    /* 🌿 Custom Styling */
    .form-control, .form-select {
        border-radius: 10px;
        border: 2px solid #4CAF50;
        transition: all 0.3s;
    }

    .form-control:focus, .form-select:focus {
        border-color: #2E7D32;
        box-shadow: 0 0 10px rgba(46, 125, 50, 0.5);
    }

    .btn {
        border-radius: 20px;
        transition: all 0.3s;
    }

    .btn:hover {
        transform: scale(1.05);
    }

    .text-danger {
        font-size: 0.9em;
        font-weight: bold;
    }
</style>

{% endblock %}
