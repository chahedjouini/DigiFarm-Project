

{% extends 'basefront.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Commande index</h1>

        <table class="table table-striped table-bordered" style="background-color: #6d8c54;">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Statut</th>
                    <th>Type</th>
                    <th>Quantit√©</th>
                    <th>Prix Unitaire</th>
                    <th>Montant Total</th>
                    <th>Date Commande</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for commande in commandes %}
                <tr>
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.statut }}</td>
                    <td>{{ commande.type }}</td>
                    <td>{{ commande.quantite }}</td>
                    <td>{{ commande.prixUnitaire }}</td>
                    <td>{{ commande.montantTotal }}</td>
                    <td>{{ commande.dateCommande ? commande.dateCommande|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_commande_delete', {'id': commande.id}) }}" class="btn btn-info btn-sm">Delete</a>
                        <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_commande_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}
