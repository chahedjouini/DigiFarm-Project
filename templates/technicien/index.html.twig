{% extends 'front/base.html.twig' %}

{% block title %}Technicien Index{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Lora:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f4;
        }
        .technicien-index {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .technicien-index h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #4CAF50; /* Green color for farming theme */
            font-family: 'Lora', serif;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }
        .technicien-index .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add shadow to the table */
            border-radius: 8px; /* Add rounded corners to the table */
            overflow: hidden; /* Ensure rounded corners are visible */
        }
        .technicien-index .table th, .technicien-index .table td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }
        .technicien-index .table th {
            background-color: #8BC34A; /* Green background for headers */
            color: white;
        }
        .technicien-index .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .technicien-index .actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        .technicien-index .actions .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
            font-size: 16px;
            display: inline-block;
            text-align: center;
            width: 150px; /* Ensure all buttons have the same width */
            transition: background-color 0.3s ease;
        }
        .technicien-index .actions .btn-primary {
            background-color: #4CAF50; /* Green button for primary actions */
        }
        .technicien-index .actions .btn-primary:hover {
            background-color: #388E3C;
        }
        .technicien-index .actions .btn-secondary {
            background-color: #8BC34A; /* Lighter green button for secondary actions */
        }
        .technicien-index .actions .btn-secondary:hover {
            background-color: #7CB342;
        }
        .technicien-index .actions .btn-danger {
            background-color: #f44336; /* Red button for delete actions */
        }
        .technicien-index .actions .btn-danger:hover {
            background-color: #e53935;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="technicien-index">
        <h1>Technicien Index</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Prenom</th>
                    <th>Specialite</th>
                    <th>Email</th>
                    <th>Telephone</th>
                    <th>Localisation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for technicien in techniciens %}
                <tr>
                    <td>{{ technicien.id }}</td>
                    <td>{{ technicien.name }}</td>
                    <td>{{ technicien.prenom }}</td>
                    <td>{{ technicien.specialite }}</td>
                    <td>{{ technicien.email }}</td>
                    <td>{{ technicien.telephone }}</td>
                    <td>{{ technicien.localisation }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_technicien_show', {'id': technicien.id}) }}">Show</a>
                        <a class="btn btn-secondary" href="{{ path('app_technicien_edit', {'id': technicien.id}) }}">Edit</a>
                        <form method="post" action="{{ path('app_technicien_delete', {'id': technicien.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ technicien.id) }}">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_technicien_new') }}">Create new</a>
    </div>
{% endblock %}
