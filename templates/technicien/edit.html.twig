{% extends 'front/base.html.twig' %}

{% block title %}Edit Technicien{% endblock %}

{% block stylesheets %}
    <style>
        .technicien-edit {
            margin-top: 20px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .technicien-edit h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }
        .technicien-edit .form-container {
            margin-bottom: 20px;
        }
        .technicien-edit .form-group {
            margin-bottom: 15px;
        }
        .technicien-edit .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }
        .technicien-edit .form-group input,
        .technicien-edit .form-group select,
        .technicien-edit .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .technicien-edit .actions {
            display: flex;
            gap: 10px;
        }
        .technicien-edit .actions .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
        }
        .technicien-edit .actions .btn-primary {
            background-color: #007bff;
        }
        .technicien-edit .actions .btn-secondary {
            background-color: #6c757d;
        }
        .technicien-edit .actions .btn-danger {
            background-color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="technicien-edit">
        <h1>Edit Technicien</h1>

        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.name, "Name") }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.prenom, "First Name") }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.specialite, "Specialty") }}
                    {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.specialite) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.email, "Email") }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.telephone, "Telephone") }}
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.telephone) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.localisation, "Location") }}
                    {{ form_widget(form.localisation, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.localisation) }}
                </div>

                <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
            {{ form_end(form) }}
        </div>

        <div class="actions">
            <a class="btn btn-secondary" href="{{ path('app_technicien_index') }}">Back to list</a>
            {{ include('technicien/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
