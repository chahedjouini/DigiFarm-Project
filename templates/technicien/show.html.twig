{% extends 'front/base.html.twig' %}

{% block title %}Technicien{% endblock %}

{% block stylesheets %}
    <style>
        .technicien-details {
            margin-top: 20px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .technicien-details h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }
        .technicien-details .table {
            margin-bottom: 20px;
            width: 100%;
            border-collapse: collapse;
        }
        .technicien-details .table th, .technicien-details .table td {
            padding: 10px;
            border: 1px solid #ccc;
        }
        .technicien-details .table th {
            background-color: #e0e0e0;
            text-align: left;
        }
        .technicien-details .table td {
            background-color: #f9f9f9;
        }
        .technicien-details .actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        .technicien-details .actions .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
        }
        .technicien-details .actions .btn-primary {
            background-color: #007bff;
        }
        .technicien-details .actions .btn-secondary {
            background-color: #6c757d;
        }
        .technicien-details .actions .btn-danger {
            background-color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="technicien-details">
        <h1>Technicien</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ technicien.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ technicien.name }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ technicien.prenom }}</td>
                </tr>
                <tr>
                    <th>Specialite</th>
                    <td>{{ technicien.specialite }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ technicien.email }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ technicien.telephone }}</td>
                </tr>
                <tr>
                    <th>Localisation</th>
                    <td>{{ technicien.localisation }}</td>
                </tr>
            </tbody>
        </table>

        <div class="actions">
            <a class="btn btn-primary" href="{{ path('app_technicien_index') }}">Back to list</a>
            <a class="btn btn-secondary" href="{{ path('app_technicien_edit', {'id': technicien.id}) }}">Edit</a>
            {{ include('technicien/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
