{% extends 'base_back_etude.html.twig' %}

{% block title %}Détails de l'abonnement{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h1 class="text-center text-primary mb-4">Détails de l'abonnement</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="bg-light">ID</th>
                    <td>{{ abonnement.id }}</td>
                </tr>
                 <tr>
                    <th class="bg-light">NOM</th>
                     <td>{{ abonnement.nom }}</td>
                </tr>
                  <tr>
                    <th class="bg-light">Prenom</th>
                    <td>{{ abonnement.prenom }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Numéro</th>
                    <td>{{ abonnement.numero }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Type d'abonnement</th>
                    <td>{{ abonnement.typeAbb|capitalize }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Durée</th>
                    <td>{{ abonnement.dureeAbb }} mois</td>
                </tr>
                <tr>
                    <th class="bg-light">Prix</th>
                    <td>{{ abonnement.prix }} $</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="{{ path('app_abonnement2_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('app_abonnement2_edit', {'id': abonnement.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a href="{{ path('app_facture2_new', {'abonnementId': abonnement.id}) }}" class="btn btn-success">
                <i class="fas fa-file-invoice"></i> Générer une facture
            </a>
            
        </div>

        <div class="d-flex justify-content-center mt-3">
            <center>{{ include('backOfficeAbonement/abonnement2/_delete_form.html.twig') }}</center>
        </div>
    </div>
</div>
{% endblock %}
