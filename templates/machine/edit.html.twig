{% extends 'front/base.html.twig' %}

{% block title %}Edit Machine{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
        .machine-edit {
            margin-top: 20px;
            padding: 20px;
            background-color: hsl(51, 62.30%, 68.80%);
            border-radius: 8px;
            box-shadow: 0 0 10px hsl(76, 58.70%, 47.50%);
        }
        .machine-edit h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: maroon; /* Change the text color to maroon */
        }
        .machine-edit .form-container {
            margin-bottom: 20px;
        }
        .machine-edit .form-group {
            margin-bottom: 15px;
        }
        .machine-edit .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: green; /* Change the text color to green */
        }
        .machine-edit .form-group input,
        .machine-edit .form-group select,
        .machine-edit .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .machine-edit .actions {
            display: flex;
            gap: 10px;
        }
        .machine-edit .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
            font-size: 16px;
            display: inline-block;
            text-align: center;
            width: 150px; /* Ensure all buttons have the same width */
        }
        .machine-edit .btn-primary {
            background-color: green; /* Change the background color to green */
        }
        .machine-edit .btn-secondary {
            background-color: rgb(80, 149, 112);
        }
        .machine-edit .btn-danger {
            background-color: rgb(193, 193, 32);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="machine-edit">
        <h1></h1>

        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.nom, "Machine Name") }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.type, "Machine Type") }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.type) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.date_achat, "Purchase Date") }}
                    {{ form_widget(form.date_achat, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date_achat) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.etat, "Condition") }}
                    {{ form_widget(form.etat, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.etat) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.etat_pred, "Previous Condition") }}
                    {{ form_widget(form.etat_pred, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.etat_pred) }}
                </div>

                <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
            {{ form_end(form) }}
        </div>

        <div class="actions">
            <a class="btn btn-secondary" href="{{ path('app_machine_index') }}">Back to list</a>
            {{ include('machine/_delete_form.html.twig', { 'machine': machine }) }}
        </div>
    </div>
{% endblock %}
