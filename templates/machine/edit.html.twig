{% extends 'front/base.html.twig' %}

{% block title %}Edit Machine{% endblock %}

{% block stylesheets %}
    <style>
        .machine-edit {
            margin-top: 20px;
            padding: 20px;
            background-color:rgb(217, 199, 199);
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .machine-edit h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }
        .machine-edit .form-container {
            margin-bottom: 20px;
        }
        .machine-edit .form-group {
            margin-bottom: 15px;
        }
        .machine-edit .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }
        .machine-edit .form-group input,
        .machine-edit .form-group select,
        .machine-edit .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .machine-edit .actions {
            display: flex;
            gap: 10px;
        }
        .machine-edit .actions .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
        }
        .machine-edit .actions .btn-primary {
            background-color: #007bff;
        }
        .machine-edit .actions .btn-secondary {
            background-color: #6c757d;
        }
        .machine-edit .actions .btn-danger {
            background-color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="machine-edit">
        <h1>Edit Machine</h1>

        <div class="form-container">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.date_achat) }}
                    {{ form_widget(form.date_achat) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.etat) }}
                    {{ form_widget(form.etat) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.etat_pred) }}
                    {{ form_widget(form.etat_pred) }}
                </div>
                <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
            {{ form_end(form) }}
        </div>

        <div class="actions">
            <a class="btn btn-secondary" href="{{ path('app_machine_index') }}">Back to list</a>
            {{ include('machine/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
