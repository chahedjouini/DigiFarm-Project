{% extends 'front/base.html.twig' %}

{% block title %}Machine index{% endblock %}

{% block stylesheets %}
    {# Include Google Fonts for improved typography #}
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Lora:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Apply the 'Roboto' font to the body */
        body {
            font-family: 'Roboto', sans-serif;
        }

        .machine-index {
            margin-top: 20px;
            padding: 20px;
            background-color:hsl(51, 64.10%, 69.40%); /* Light beige background */
            border-radius: 8px;
            box-shadow: 0 0 10px #eb9719;
        }

        .machine-index h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color:#7fa526; /* Deep green color */
            font-family: 'Lora', serif;
        }

        .machine-index table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .machine-index th, .machine-index td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .machine-index th {
            background-color:hsl(46, 64.80%, 54.30%); /* Soft green background */
            color: #fff;
            font-family: 'Lora', serif;
        }

        .machine-index tr:nth-child(even) {
            background-color:rgb(194, 203, 188); /* Light green background for even rows */
        }

        .machine-index .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
            font-family: 'Roboto', sans-serif;
        }

        .machine-index .btn-primary {
            background-color:hsl(122, 26.90%, 42.40%); /* Green button */
        }

        .machine-index .btn-secondary {
            background-color:hsl(120, 18.50%, 51.40%); /* Blue button */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="machine-index">
        <h1></h1>

        <table class="table">
            <thead>
                <tr>
                   
                    <th>Name</th>
                    <th>Type</th>
                    <th>Purchase Date</th>
                    <th>Condition</th>
                    <th>Predicted Condition</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for machine in machines %}
                <tr>
                    
                    <td>{{ machine.nom }}</td>
                    <td>{{ machine.type }}</td>
                    <td>{{ machine.dateAchat ? machine.dateAchat|date('Y-m-d') : '' }}</td>
                    <td>{{ machine.etat.value }}</td>
                    <td>{{ machine.etatPred }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_machine_show', {'id': machine.id}) }}">show</a>
                        <a class="btn btn-secondary" href="{{ path('app_machine_edit', {'id': machine.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_machine_new') }}">Create new</a>
    </div>
{% endblock %}
