{% extends 'basefront.html.twig' %}

{% block title %}Machine index{% endblock %}

{% block body %}
    <h1>Machine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Type</th>
                <th>Date_achat</th>
                <th>Etat</th>
                <th>Etat_pred</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for machine in machines %}
            <tr>
                <td>{{ machine.id }}</td>
                <td>{{ machine.nom }}</td>
                <td>{{ machine.type }}</td>
                <td>{{ machine.dateAchat ? machine.dateAchat|date('Y-m-d') : '' }}</td>
                <td>{{ machine.etat.value }}</td>
                <td>{{ machine.etatPred }}</td>
                <td>
                    <a href="{{ path('app_machine_show', {'id': machine.id}) }}">show</a>
                    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_machine_new') }}">Create new</a>
{% endblock %}
