{% extends 'front/base.html.twig' %}

{% block title %}New Machine{% endblock %}

{% block stylesheets %}
    {# Include Google Fonts for improved typography #}
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Lora:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Apply the 'Roboto' font to the body */
        body {
            font-family: 'Roboto', sans-serif;
        }

        .machine-index {
            margin-top: 20px;
            padding: 20px;
            background-color:hsl(36, 30.50%, 62.70%); /* Light beige background */
            border-radius: 8px;
            box-shadow: 0 0 10px hsla(23, 68.90%, 47.80%, 0.75);
        }

        .machine-index h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color:hsl(145, 36.30%, 82.20%); /* Deep green color */
            font-family: 'Lora', serif;
        }

        .machine-index table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .machine-index th, .machine-index td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .machine-index th {
            background-color: #a8d5ba; /* Soft green background */
            color: #fff;
            font-family: 'Lora', serif;
        }

        .machine-index tr:nth-child(even) {
            background-color: #e9f1e3; /* Light green background for even rows */
        }

        .machine-index .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
            font-family: 'Roboto', sans-serif;
        }

        .machine-index .btn-primary {
            background-color: #4CAF50; /* Green button */
        }

        .machine-index .btn-secondary {
            background-color:hsl(120, 22.70%, 59.40%); /* Blue button */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="machine-new">
        <h1>Create new Machine</h1>

        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.nom, "Machine Name") }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.type, "Machine Type") }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.type) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.date_achat, "Purchase Date") }}
                    {{ form_widget(form.date_achat, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date_achat) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.etat, "Condition") }}
                    {{ form_widget(form.etat, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.etat) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.etat_pred, "Location") }}
                    {{ form_widget(form.etat_pred, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.etat_pred) }}
                </div>

                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>

        <div class="actions">
            <a class="btn btn-secondary" href="{{ path('app_machine_index') }}">Back to list</a>
        </div>
    </div>
{% endblock %}
