{% extends 'front/base.html.twig' %}

{% block title %}New Machine{% endblock %}

{% block stylesheets %}
    <style>
        .machine-new {
            margin-top: 20px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .machine-new h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }
        .machine-new .form-container {
            margin-bottom: 20px;
        }
        .machine-new .form-group {
            margin-bottom: 15px;
        }
        .machine-new .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }
        .machine-new .form-group input,
        .machine-new .form-group select,
        .machine-new .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .machine-new .actions {
            display: flex;
            gap: 10px;
        }
        .machine-new .actions .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
        }
        .machine-new .actions .btn-primary {
            background-color: #007bff;
        }
        .machine-new .actions .btn-secondary {
            background-color: #6c757d;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="machine-new">
        <h1>Create new Machine</h1>

        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.nom, "Machine Name") }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.type, "Machine Type") }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.type) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.date_achat, "Purchase Date") }}
                    {{ form_widget(form.date_achat, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date_achat) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.etat, "Condition") }}
                    {{ form_widget(form.etat, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.etat) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.etat_pred, "Location") }}
                    {{ form_widget(form.etat_pred, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.etat_pred) }}
                </div>

                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>

        <div class="actions">
            <a class="btn btn-secondary" href="{{ path('app_machine_index') }}">Back to list</a>
        </div>
    </div>
{% endblock %}
