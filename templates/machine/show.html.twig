{% extends 'base.html.twig' %}

{% block title %}Machine{% endblock %}

{% block body %}
    <h1>Machine</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ machine.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ machine.nom }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ machine.type }}</td>
            </tr>
            <tr>
                <th>Date_achat</th>
                <td>{{ machine.dateAchat ? machine.dateAchat|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ machine.etat.value}}</td>
            </tr>
            <tr>
                <th>Etat_pred</th>
                <td>{{ machine.etatPred }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_machine_index') }}">back to list</a>

    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}">edit</a>

    {{ include('machine/_delete_form.html.twig') }}
{% endblock %}
