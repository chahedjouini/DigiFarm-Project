{% extends 'base_front_etude.html.twig' %}

{% block title %}Machine Details{% endblock %}

{% block stylesheets %}
    <style>
       <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <style>
        /* General Styles */
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #e9f5e9; /* Light green background */
            color: #333;
        }


        .machine-details {
            margin: 40px auto;
            padding: 30px;
            max-width: 800px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .machine-details h1 {
            margin-bottom: 25px;
            font-size: 28px;
            font-weight: 700;
            color: #2c3e50; /* Dark blue for headings */
            text-align: center;
        }

        /* Table Styles */
        .machine-details table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 25px;
        }

        .machine-details th, .machine-details td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
            font-size: 16px;
            color: #333;
        }

        .machine-details th {
            background-color:  #e0f7e0; /* Green background for headers */
            color:black;
            font-weight: 600;
        }

        /* Buttons */
        .machine-details .actions {
            display: flex;
            gap: 15px;
            justify-content: flex-end; /* Align buttons to the right */
            margin-top: 25px;
        }

        .machine-details .btn {
            padding: 12px 25px;
            text-decoration: none;
            color: black;
            border-radius: 6px;
            font-size: 16px;
            font-weight: 600;
            text-align: center;
            transition: background-color 0.3s ease, transform 0.2s ease;
            width: 160px; /* Consistent button width */
        }

        .machine-details .btn:hover {
            transform: translateY(-2px);
        }

        .machine-details .btn-primary {
            background-color: #27ae60; /* Green for primary actions */
        }

        .machine-details .btn-primary:hover {
            background-color: #219653; /* Darker green on hover */
        }

        .machine-details .btn-secondary {
            background-color: #95a5a6; /* Gray for secondary actions */
        }

        .machine-details .btn-secondary:hover {
            background-color: #7f8c8d; /* Darker gray on hover */
        }

        .machine-details .btn-danger {
            background-color: #e74c3c; /* Red for delete actions */
        }

        .machine-details .btn-danger:hover {
            background-color: #c0392b; /* Darker red on hover */
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .machine-details {
                padding: 20px;
            }

            .machine-details h1 {
                font-size: 24px;
            }

            .machine-details .btn {
                width: 100%;
                margin-bottom: 10px;
            }

            .machine-details .actions {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="machine-details">
        <h1></h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ machine.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ machine.nom }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ machine.type }}</td>
                </tr>
                <tr>
                    <th>Purchase Date</th>
                    <td>{{ machine.dateAchat ? machine.dateAchat|date('Y-m-d') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th>Condition</th>
                    <td>{{ machine.etat.value }}</td>
                </tr>
                <tr>
                    <th>Previous Condition</th>
                    <td>{{ machine.etatPred }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a class="btn btn-primary" href="{{ path('app_machine_index') }}">Back to list</a>
            <a class="btn btn-secondary" href="{{ path('app_machine_edit', {'id': machine.id}) }}">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('machine/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
