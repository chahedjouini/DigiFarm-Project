{% extends 'front/base.html.twig' %}

{% block title %}Machine Details{% endblock %}

{% block stylesheets %}
    <style>
        .machine-details {
            margin-top: 20px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .machine-details h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }
        .machine-details table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .machine-details th, .machine-details td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }
        .machine-details th {
            background-color: #4CAF50;
            color: white;
        }
        .machine-details tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .machine-details .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
        }
        .machine-details .btn-primary {
            background-color: #007bff;
        }
        .machine-details .btn-secondary {
            background-color: #6c757d;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="machine-details">
        <h1>Machine Details</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ machine.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ machine.nom }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ machine.type }}</td>
                </tr>
                <tr>
                    <th>Purchase Date</th>
                    <td>{{ machine.dateAchat ? machine.dateAchat|date('Y-m-d') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th>Condition</th>
                    <td>{{ machine.etat.value }}</td>
                </tr>
                <tr>
                    <th>Previous Condition</th>
                    <td>{{ machine.etatPred }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a class="btn btn-primary" href="{{ path('app_machine_index') }}">Back to list</a>
            <a class="btn btn-secondary" href="{{ path('app_machine_edit', {'id': machine.id}) }}">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('machine/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
