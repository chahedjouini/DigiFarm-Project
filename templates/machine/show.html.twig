{% extends 'front/base.html.twig' %}

{% block title %}Machine Details{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
        .machine-details {
            margin-top: 20px;
            padding: 20px;
            background-color:hsla(50, 89.00%, 64.30%, 0.93); /* Light background color */
            border-radius: 8px;
            box-shadow: 0 0 10px  #dea50a;
        }
        .machine-details h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #4CAF50; /* Green color for farming theme */
        }
        .machine-details table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .machine-details th, .machine-details td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
             margin-bottom: 20px;
            font-size: 24px;
            color:hsl(122, 52.60%, 22.40%);
        }
        .machine-details th {
            background-color:hsl(122, 16.90%, 45.30%); /* Green background for headers */
            color: white;
             margin-bottom: 20px;
            font-size: 24px;
            color:hsl(54, 45.00%, 58.60%);
        }
        
        .machine-details .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
            font-size: 16px;
            display: inline-block;
            text-align: center;
            width: 150px; /* Ensure all buttons have the same width */
        }
        .machine-details .btn-primary {
            background-color: #18891b; /* Green button for primary actions */
        }
        .machine-details .btn-secondary {
            background-color: #8BC34A; /* Lighter green button for secondary actions */
        }
        .machine-details .btn-danger {
            background-color:#126e37; /* Red button for delete actions */
        }
    </style>
{% endblock %}

{% block body %}
    <div class="machine-details">
        <h1></h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ machine.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ machine.nom }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ machine.type }}</td>
                </tr>
                <tr>
                    <th>Purchase Date</th>
                    <td>{{ machine.dateAchat ? machine.dateAchat|date('Y-m-d') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th>Condition</th>
                    <td>{{ machine.etat.value }}</td>
                </tr>
                <tr>
                    <th>Previous Condition</th>
                    <td>{{ machine.etatPred }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a class="btn btn-primary" href="{{ path('app_machine_index') }}">Back to list</a>
            <a class="btn btn-secondary" href="{{ path('app_machine_edit', {'id': machine.id}) }}">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('machine/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
