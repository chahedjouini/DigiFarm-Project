{% extends 'front/base.html.twig' %}

{% block title %}Edit Maintenance{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <style>
        /* General Styles */
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #e9f5e9; /* Light green background */
            color: #333;
        }

        .maintenance-edit {
            margin: 40px auto;
            padding: 30px;
            max-width: 800px;
            background-color: #e0f7e0;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .maintenance-edit h1 {
            margin-bottom: 25px;
            font-size: 28px;
            font-weight: 700;
            color: #2c3e50; /* Dark blue for headings */
            text-align: center;
        }

        /* Form Container */
        .maintenance-edit .form-container {
            margin-bottom: 25px;
        }

        .maintenance-edit .form-group {
            margin-bottom: 20px;
        }

        .maintenance-edit .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #27ae60; /* Green for labels */
        }

        .maintenance-edit .form-group input,
        .maintenance-edit .form-group select,
        .maintenance-edit .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        .maintenance-edit .form-group input:focus,
        .maintenance-edit .form-group select:focus,
        .maintenance-edit .form-group textarea:focus {
            border-color: #27ae60; /* Green border on focus */
            outline: none;
        }

        /* Buttons */
        .maintenance-edit .actions {
            display: flex;
            gap: 15px;
            justify-content: flex-end; /* Align buttons to the right */
            margin-top: 25px;
        }

        .maintenance-edit .btn {
            padding: 12px 25px;
            text-decoration: none;
            color: #fff;
            border-radius: 6px;
            font-size: 16px;
            font-weight: 600;
            text-align: center;
            transition: background-color 0.3s ease, transform 0.2s ease;
            width: 160px; /* Consistent button width */
        }

        .maintenance-edit .btn:hover {
            transform: translateY(-2px);
        }

        .maintenance-edit .btn-primary {
            background-color: #27ae60; /* Green for primary actions */
        }

        .maintenance-edit .btn-primary:hover {
            background-color: #219653; /* Darker green on hover */
        }

        .maintenance-edit .btn-secondary {
            background-color: #95a5a6; /* Gray for secondary actions */
        }

        .maintenance-edit .btn-secondary:hover {
            background-color: #7f8c8d; /* Darker gray on hover */
        }

        .maintenance-edit .btn-danger {
            background-color: #e74c3c; /* Red for delete actions */
        }

        .maintenance-edit .btn-danger:hover {
            background-color: #c0392b; /* Darker red on hover */
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .maintenance-edit {
                padding: 20px;
            }

            .maintenance-edit h1 {
                font-size: 24px;
            }

            .maintenance-edit .btn {
                width: 100%;
                margin-bottom: 10px;
            }

            .maintenance-edit .actions {
                flex-direction: column;
                gap: 10px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="maintenance-edit">
        <h1>Edit Maintenance</h1>

        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.dateEntretien, "Maintenance Date") }}
                    {{ form_widget(form.dateEntretien, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dateEntretien) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.cout, "Cost") }}
                    {{ form_widget(form.cout, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.cout) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.temperature, "Temperature") }}
                    {{ form_widget(form.temperature, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.temperature) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.humidite, "Humidity") }}
                    {{ form_widget(form.humidite, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.humidite) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.consoCarburant, "Fuel Consumption") }}
                    {{ form_widget(form.consoCarburant, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.consoCarburant) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.consoEnergie, "Energy Consumption") }}
                    {{ form_widget(form.consoEnergie, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.consoEnergie) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.status, "Status") }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.status) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.idMachine, "Machine") }}
                    {{ form_widget(form.idMachine, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.idMachine) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.idTechnicien, "Technician") }}
                    {{ form_widget(form.idTechnicien, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.idTechnicien) }}
                </div>

                <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
            {{ form_end(form) }}
        </div>

        <div class="actions">
            <a class="btn btn-secondary" href="{{ path('app_maintenance_index') }}">Back to list</a>
            {{ include('maintenance/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
