{% extends 'front/base.html.twig' %}

{% block title %}Maintenance index{% endblock %}

{% block body %}
    <h1>Maintenance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateEntretien</th>
                <th>Cout</th>
                <th>Temperature</th>
                <th>Humidite</th>
                <th>ConsoCarburant</th>
                <th>ConsoEnergie</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for maintenance in maintenances %}
            <tr>
                <td>{{ maintenance.id }}</td>
                <td>{{ maintenance.dateEntretien ? maintenance.dateEntretien|date('Y-m-d') : '' }}</td>
                <td>{{ maintenance.cout }}</td>
                <td>{{ maintenance.temperature }}</td>
                <td>{{ maintenance.humidite }}</td>
                <td>{{ maintenance.consoCarburant }}</td>
                <td>{{ maintenance.consoEnergie }}</td>
                <td>{{ maintenance.Status.value }}</td>
                <td>
                    <a href="{{ path('app_maintenance_show', {'id': maintenance.id}) }}">show</a>
                    <a href="{{ path('app_maintenance_edit', {'id': maintenance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_maintenance_new') }}">Create new</a>
{% endblock %}
