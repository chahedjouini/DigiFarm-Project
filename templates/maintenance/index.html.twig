{% extends 'front/base.html.twig' %}

{% block title %}Maintenance Index{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Lora:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f4f4;
        }
        .maintenance-index {
            margin-top: 20px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .maintenance-index h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: hsl(122, 16.00%, 39.20%); /* Green color for farming theme */
            font-family: 'Lora', serif;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        }
        .maintenance-index .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add shadow to the table */
            border-radius: 8px; /* Add rounded corners to the table */
            overflow: hidden; /* Ensure rounded corners are visible */
        }
        .maintenance-index .table th, .maintenance-index .table td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }
        .maintenance-index .table th {
            background-color: #8BC34A; /* Green background for headers */
            color: white;
        }
        .maintenance-index .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .maintenance-index .actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        .maintenance-index .actions .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
            font-size: 16px;
            display: inline-block;
            text-align: center;
            width: 150px; /* Ensure all buttons have the same width */
            transition: background-color 0.3s ease;
        }
        .maintenance-index .actions .btn-primary {
            background-color: #4CAF50; /* Green button for primary actions */
        }
        .maintenance-index .actions .btn-primary:hover {
            background-color: #388E3C;
        }
        .maintenance-index .actions .btn-secondary {
            background-color: #8BC34A; /* Lighter green button for secondary actions */
        }
        .maintenance-index .actions .btn-secondary:hover {
            background-color: #7CB342;
        }
        .maintenance-index .actions .btn-danger {
            background-color: #f44336; /* Red button for delete actions */
        }
        .maintenance-index .actions .btn-danger:hover {
            background-color: #e53935;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="maintenance-index">
        <h1>Maintenance Index</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date Entretien</th>
                    <th>Cost</th>
                    <th>Temperature</th>
                    <th>Humidity</th>
                    <th>Fuel Consumption</th>
                    <th>Energy Consumption</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for maintenance in maintenances %}
                <tr>
                    <td>{{ maintenance.id }}</td>
                    <td>{{ maintenance.dateEntretien ? maintenance.dateEntretien|date('Y-m-d') : '' }}</td>
                    <td>{{ maintenance.cout }}</td>
                    <td>{{ maintenance.temperature }}</td>
                    <td>{{ maintenance.humidite }}</td>
                    <td>{{ maintenance.consoCarburant }}</td>
                    <td>{{ maintenance.consoEnergie }}</td>
                    <td>{{ maintenance.Status.value }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_maintenance_show', {'id': maintenance.id}) }}">Show</a>
                        <a class="btn btn-secondary" href="{{ path('app_maintenance_edit', {'id': maintenance.id}) }}">Edit</a>
                        <form method="post" action="{{ path('app_maintenance_delete', {'id': maintenance.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display:inline;">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_maintenance_new') }}">Create new</a>
    </div>
{% endblock %}
