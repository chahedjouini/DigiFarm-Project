{% extends 'front/base.html.twig' %}

{% block title %}Maintenance{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Lora:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color:hsl(50, 82.00%, 58.60%);
        }
        .maintenance-details {
            margin-top: 20px;
            padding: 20px;
            background-color: #d8ca85;
            border-radius: 8px;
            box-shadow: 0 0 10px hsl(127, 94.70%, 7.50%);
        }
        .maintenance-details h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color:#58965a; /* Green color for farming theme */
            font-family: 'Lora', serif;
            text-shadow: 1px 1px 2px #092a0d;
        }
        .maintenance-details .table {
            margin-bottom: 20px;
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add shadow to the table */
            border-radius: 8px; /* Add rounded corners to the table */
            overflow: hidden; /* Ensure rounded corners are visible */
        }
        .maintenance-details .table th, .maintenance-details .table td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }
        .maintenance-details .table th {
            background-color:#3b571b; /* Green background for headers */
            color: white;
        }
        
        .maintenance-details .actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        .maintenance-details .actions .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
            font-size: 16px;
            display: inline-block;
            text-align: center;
            width: 150px; /* Ensure all buttons have the same width */
            transition: background-color 0.3s ease;
        }
        .maintenance-details .actions .btn-primary {
            background-color: #4CAF50; /* Green button for primary actions */
        }
        .maintenance-details .actions .btn-primary:hover {
            background-color: #388E3C;
        }
        .maintenance-details .actions .btn-secondary {
            background-color: #8BC34A; /* Lighter green button for secondary actions */
        }
        .maintenance-details .actions .btn-secondary:hover {
            background-color: #7CB342;
        }
        .maintenance-details .actions .btn-danger {
            background-color: #f44336; /* Red button for delete actions */
        }
        .maintenance-details .actions .btn-danger:hover {
            background-color: #e53935;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="maintenance-details">
        <h1>Maintenance</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ maintenance.id }}</td>
                </tr>
                <tr>
                    <th>Date Entretien</th>
                    <td>{{ maintenance.dateEntretien ? maintenance.dateEntretien|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Cost</th>
                    <td>{{ maintenance.cout }}</td>
                </tr>
                <tr>
                    <th>Temperature</th>
                    <td>{{ maintenance.temperature }}</td>
                </tr>
                <tr>
                    <th>Humidity</th>
                    <td>{{ maintenance.humidite }}</td>
                </tr>
                <tr>
                    <th>Fuel Consumption</th>
                    <td>{{ maintenance.consoCarburant }}</td>
                </tr>
                <tr>
                    <th>Energy Consumption</th>
                    <td>{{ maintenance.consoEnergie }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ maintenance.status.value }}</td>
                </tr>
            </tbody>
        </table>

        <div class="actions">
            <a class="btn btn-primary" href="{{ path('app_maintenance_index') }}">Back to list</a>
            <a class="btn btn-secondary" href="{{ path('app_maintenance_edit', {'id': maintenance.id}) }}">Edit</a>
            <a class="btn btn-danger" href="{{ path('app_maintenance_delete', {'id': maintenance.id}) }}" 
               onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
        </div>
    </div>
{% endblock %}
