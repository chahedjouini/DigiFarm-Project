{% extends 'base_back_etude.html.twig' %}

{% block title %}User Search{% endblock %}

{% block styles %}
<style>
    .container {
        max-width: 95%;
    }
    .card {
        border-radius: 10px;
    }
    .table {
        background-color: white;
    }
    .table thead {
        background-color: #007bff;
        color: white;
    }
    .table tbody tr:hover {
        background-color: #f1f1f1;
    }
    .btn-sm {
        margin-right: 5px;
    }
    .search-form {
        margin-bottom: 20px;
    }
    .search-form input {
        padding: 5px;
        margin-right: 10px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">User Search</h1>
    <div class="card shadow-lg p-4">
        <form method="get" action="{{ path('user_search') }}" class="search-form text-center">
            <input type="text" name="searchTerm" placeholder="Search by name" value="{{ searchTerm }}">
            <button type="submit" class="btn btn-primary btn-sm">Search</button>
        </form>

        {% if users is not empty %}
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td><a href="{{ path('app_user_edit', {'id': user.id}) }}">{{ user.nom }}</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-center">No users found</p>
        {% endif %}
    </div>
</div>
{% endblock %}
