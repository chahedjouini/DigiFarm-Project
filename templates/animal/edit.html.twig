{% extends 'baseback.html.twig' %}

{% block title %}Edit Animal{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Edit Animal</h2>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <style>
                    .form-control-dark {
                        background-color: #2b2b2b !important;
                        color: #ffffff !important;
                        border: 1px solid #555 !important;
                        border-radius: 8px;
                    }
                    
                    .form-control-dark:focus {
                        border-color: #0d6efd !important;
                        box-shadow: 0 0 5px rgba(13, 110, 253, 0.5) !important;
                    }
                </style>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            {{ form_row(form.nom, {'attr': {'class': 'form-control form-control-dark'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            {{ form_row(form.type, {'attr': {'class': 'form-control form-control-dark'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            {{ form_row(form.age, {'attr': {'class': 'form-control form-control-dark'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            {{ form_row(form.poids, {'attr': {'class': 'form-control form-control-dark'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            {{ form_row(form.race, {'attr': {'class': 'form-control form-control-dark'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            {{ form_row(form.suivi, {'attr': {'class': 'form-control form-control-dark'}}) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a href="{{ path('app_animal_index') }}" class="btn btn-outline-secondary">Back to List</a>
                    <button type="submit" class="btn btn-success">{{ button_label|default('Update') }}</button>
                </div>
                {{ form_end(form) }}

                {{ include('animal/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
