{% extends 'baseback.html.twig' %}

{% block title %}Détails du Produit{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh; margin-top: 70px;">
    <div class="card shadow-lg p-3 bg-dark text-white" style="width: 40%; max-width: 500px;">  {# Réduction de la taille #}

        <!-- ✅ Titre bien visible -->
        <div class="card-header bg-primary text-center py-2">
            <h4 class="mb-0 text-white" style="font-size: 18px;">Détails du Produit</h4> {# Titre plus petit #}
        </div>

        <div class="card-body">
            <table class="table table-dark table-borderless">
                <tbody>
                    <tr>
                        <th class="text-end">Type :</th>
                        <td>{{ produit.type }}</td>
                    </tr>
                    <tr>
                        <th class="text-end">Référence :</th>
                        <td>{{ produit.reference }}</td>
                    </tr>
                    <tr>
                        <th class="text-end">Nom :</th>
                        <td>{{ produit.nom }}</td>
                    </tr>
                    <tr>
                        <th class="text-end">Prix :</th>
                        <td>{{ produit.prix }} usd</td>
                    </tr>
                    <tr>
                        <th class="text-end">Description :</th>
                        <td>{{ produit.description }}</td>
                    </tr>
                    <tr>
                        <th class="text-end">Stock :</th>
                        <td>{{ produit.stock }}</td>
                    </tr>
                </tbody>
            </table>

            <!-- ✅ Affichage de l'image si elle existe -->
            {% if produit.image %}
                <div class="text-center mb-3">
                    <img src="{{ asset('uploads/' ~ produit.image) }}" alt="Image du produit"
                         class="img-fluid rounded shadow" style="max-width: 150px;">
                </div>
            {% endif %}

            <!-- ✅ Bouton de retour -->
            <div class="text-center">
                <a href="{{ path('app_produit_gestion') }}" class="btn btn-secondary btn-sm px-3">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
