
{% extends 'baseback.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Liste des Produits</h1>

        <!-- Formulaire de recherche (exemple) -->
        <form method="get" action="{{ path('app_produit_index') }}" novalidate>
            <div class="row mb-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" name="search" placeholder="Rechercher un produit">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </div>
        </form>

        <table class="table table-bordered table-striped" >
            <thead class="table-dark text-center">
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Référence</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td class="text-center">{{ produit.id }}</td>
                    <td>{{ produit.type }}</td>
                    <td>{{ produit.reference }}</td>
                    <td>{{ produit.nom }}</td>
                    <td>{{ produit.description }}</td>
                    <td class="text-center">{{ produit.stock }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-info btn-sm">Voir</a>
                        <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                       
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted">Aucun produit trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_produit_new') }}" class="btn btn-success">Créer un nouveau produit</a>
        </div>
    </div>
{% endblock %}
