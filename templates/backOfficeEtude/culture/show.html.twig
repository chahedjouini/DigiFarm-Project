{% extends 'base_back_etude.html.twig' %}

{% block title %}Culture{% endblock %}

{% block body %}
<div class="container mt-4">
 <div class="container mt-4 pt-5">
    <h1 class="text-center text-primary mb-4">Culture</h1>
    <div class="card shadow-lg p-4">
    <div class="card shadow-lg p-4">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="bg-light">ID</th>
                    <td>{{ culture.id }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Nom</th>
                    <td>{{ culture.nom }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Surface</th>
                    <td>{{ culture.surface }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Date de Plantation</th>
                    <td>{{ culture.datePlantation ? culture.datePlantation|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Date de Récolte</th>
                    <td>{{ culture.dateRecolte ? culture.dateRecolte|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Région</th>
                    <td>{{ culture.region }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Type de Culture</th>
                    <td>{{ culture.typeCulture }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Densité de Plantation</th>
                    <td>{{ culture.densitePlantation }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Besoins en Eau</th>
                    <td>{{ culture.besoinsEau }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Besoins en Engrais</th>
                    <td>{{ culture.besoinsEngrais.value }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Rendement Moyen</th>
                    <td>{{ culture.rendementMoyen }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Coût Moyen</th>
                    <td>{{ culture.coutMoyen }}</td>
                </tr>
             
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <a href="{{ path('app_culture_index', {'context': app.request.get('context')}) }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_culture_edit', {'context': app.request.get('context'), 'id': culture.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier
        </a>
    </div>

    <div class="d-flex justify-content-center mt-3">
        {{ include('backOfficeEtude/culture/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
