{% extends 'base_back_etude.html.twig' %}

{% block title %}Expert{% endblock %}

{% block body %}
<div class="container mt-4">
 <div class="container mt-4 pt-5">
    <h1 class="text-center text-primary mb-4">Expert</h1>
    <div class="card shadow-lg p-4">
    <div class="card shadow-lg p-4">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th class="bg-light">ID</th>
                    <td>{{ expert.id }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Nom</th>
                    <td>{{ expert.nom }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Prénom</th>
                    <td>{{ expert.prenom }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Téléphone</th>
                    <td>{{ expert.tel }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Email</th>
                    <td>{{ expert.email }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Zone</th>
                    <td>{{ expert.zone }}</td>
                </tr>
                <tr>
                    <th class="bg-light">Disponibilité</th>
                    <td>{{ expert.dispo.value }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center gap-3 mt-4">
        <a href="{{ path('app_expert_index', {'context': app.request.get('context')}) }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
        <a href="{{ path('app_expert_edit', {'context': app.request.get('context'), 'id': expert.id}) }}" class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier
        </a>
    </div>

    <div class="d-flex justify-content-center mt-3">
        {{ include('backOfficeEtude/expert/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
    