

{% block title %}New Machine{% endblock %}

{% block stylesheets %}
    <style>
        .machine-new {
            margin-top: 20px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .machine-new h1 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }
        .machine-new .form-container {
            margin-bottom: 20px;
        }
        .machine-new .actions {
            display: flex;
            gap: 10px;
        }
        .machine-new .actions .btn {
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            border-radius: 4px;
        }
        .machine-new .actions .btn-primary {
            background-color: #007bff;
        }
        .machine-new .actions .btn-secondary {
            background-color: #6c757d;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="machine-new">
        <h1>Create new Machine</h1>

        <div class="form-container">
            {{ include('machine2/_form.html.twig') }}
        </div>

        <div class="actions">
            <a class="btn btn-secondary" href="{{ path('app_machine2_index') }}">Back to list</a>
        </div>
    </div>
{% endblock %}
