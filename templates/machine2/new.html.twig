{% extends 'back/base.html.twig' %}
{% block title %}New Machine{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .centered-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            background: linear-gradient(135deg, #f8f9fa, #e8eaf6);
        }
        .machine-details-container {
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 1200px;
            margin: auto;
        }
        .machine-details-title {
            margin-bottom: 20px;
            font-size: 32px;
            color: #512da8;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            color: #333;
        }
        .form-label {
            font-weight: bold;
            color: #333;
        }
        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 15px;
        }
        .text-danger {
            font-size: 0.875rem;
            color: #dc3545;
        }
        .table {
            border-radius: 8px;
            overflow: hidden;
            width: 100%;
        }
        .table th {
            background-color: #512da8;
            color: #fff;
            text-transform: uppercase;
            padding: 12px;
            font-weight: bold;
        }
        .table td {
            background-color: #ffffff;
            color: #333;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }
        .table tr:hover {
            background-color: #ede7f6;
        }
        .btn-primary {
            background-color: #d32f2f;
            color: white;
            border-radius: 6px;
            padding: 10px 15px;
            transition: 0.3s ease-in-out;
        }
        .btn-primary:hover {
            background-color: #b71c1c;
        }
        .btn-secondary {
            background-color: #455a64;
            color: white;
            border-radius: 6px;
            padding: 10px 15px;
            transition: 0.3s ease-in-out;
        }
        .btn-secondary:hover {
            background-color: #37474f;
        }
        .actions {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }
        a {
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
<div class="centered-container">
    <div class="machine-details-container">
        <h1 class="machine-details-title">Create New Machine</h1>

        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'container p-4'}}) }}
                
                <div class="mb-3">
                    {{ form_label(form.nom , "Nom", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.type , "Type", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.type, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.date_achat , "Date d'Achat", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_achat, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.date_achat, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.etat , "État", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.etat, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.etat, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.etat_pred , "État Précédent", {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.etat_pred, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.etat_pred, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Create') }}</button>
                </div>

            {{ form_end(form) }}
        </div>

        <div class="actions">
            <a class="btn btn-secondary" href="{{ path('app_machine2_index') }}">Back to list</a>
        </div>
    </div>
</div>
{% endblock %}
