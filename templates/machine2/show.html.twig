{% extends 'base_back_etude.html.twig' %}
{% block title %}Machine Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .centered-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            background: linear-gradient(135deg, #f8f9fa, #e8eaf6);
        }
        .machine-details-container {
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 1200px;
            margin: auto;
        }
        .machine-details-title {
            margin-bottom: 20px;
            font-size: 32px;
            color: #512da8;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .table {
            border-radius: 8px;
            overflow: hidden;
            width: 100%;
        }
        .table th {
            background-color: #512da8;
            color: #fff;
            text-transform: uppercase;
            padding: 12px;
            font-weight: bold;
        }
        .table td {
            background-color: #ffffff;
            color: #333;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }
        .table tr:hover {
            background-color: #ede7f6;
        }
        .btn-primary {
            background-color: #d32f2f;
            color: white;
            border-radius: 6px;
            padding: 10px 15px;
            transition: 0.3s ease-in-out;
        }
        .btn-primary:hover {
            background-color: #b71c1c;
        }
        .btn-secondary {
            background-color: #455a64;
            color: white;
            border-radius: 6px;
            padding: 10px 15px;
            transition: 0.3s ease-in-out;
        }
        .btn-secondary:hover {
            background-color: #37474f;
        }
        .actions {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }
        a {
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
<div class="centered-container">
    <div class="machine-details-container">
        <h1 class="machine-details-title">Machine Details</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ machine.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ machine.nom }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ machine.type }}</td>
                </tr>
                <tr>
                    <th>Purchase Date</th>
                    <td>{{ machine.dateAchat ? machine.dateAchat|date('Y-m-d') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th>Condition</th>
                    <td>{{ machine.etat.value }}</td>
                </tr>
                <tr>
                    <th>Previous Condition</th>
                    <td>{{ machine.etatPred }}</td>
                </tr>
            </tbody>
        </table>

        <div class="actions">
            <a class="btn btn-primary" href="{{ path('app_machine2_index') }}">Back to list</a>
            <a class="btn btn-secondary" href="{{ path('app_machine2_edit', {'id': machine.id}) }}">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('machine2/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
