{% extends 'baseback.html.twig' %}

{% block title %}Suivi Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card shadow-sm bg-dark text-white">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Suivi Details</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            <h5>ID</h5>
                            <p class="mb-0">{{ suivi.id }}</p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            <h5>Temperature</h5>
                            <p class="mb-0">{{ suivi.temperature }} °C</p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            <h5>Rythme Cardiaque</h5>
                            <p class="mb-0">{{ suivi.rythmeCardiaque }}</p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            <h5>État</h5>
                            <p class="mb-0">{{ suivi.etat }}</p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            <h5>Vétérinaire</h5>
                            <p class="mb-0">{{ suivi.veterinaire }}</p>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="p-3 border rounded bg-dark text-white">
                            <h5>ID Client</h5>
                            <p class="mb-0">{{ suivi.idClient }}</p>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <div>
                        <a href="{{ path('app_suivi_index2') }}" class="btn btn-outline-secondary">Back to List</a>

                        <a href="{{ path('app_suivi_edit', {'id': suivi.id}) }}" class="btn btn-warning">Edit</a>
                        {{ include('suivi/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
