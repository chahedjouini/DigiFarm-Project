{% extends 'base_back_etude.html.twig' %}

{% block title %}New Technicien{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .centered-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            background: linear-gradient(135deg, #f8f9fa, #e8eaf6);
        }
        .technicien-details-container {
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 1200px;
            margin: auto;
        }
        .technicien-details-title {
            margin-bottom: 20px;
            font-size: 32px;
            color: #512da8;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .form-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            color: #333;
        }
        .form-label {
            font-weight: bold;
            color: #333;
        }
        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 15px;
        }
        .text-danger {
            font-size: 0.875rem;
            color: #dc3545;
        }
        .btn-primary {
            background-color: #d32f2f;
            color: white;
            border-radius: 6px;
            padding: 10px 15px;
            transition: 0.3s ease-in-out;
        }
        .btn-primary:hover {
            background-color: #b71c1c;
        }
        .btn-secondary {
            background-color: #455a64;
            color: white;
            border-radius: 6px;
            padding: 10px 15px;
            transition: 0.3s ease-in-out;
        }
        .btn-secondary:hover {
            background-color: #37474f;
        }
        .actions {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }
        a {
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
<div class="centered-container">
    <div class="technicien-details-container">
        <h1 class="technicien-details-title">Create New Technicien</h1>

        <div class="form-container">
            {{ include('technicien2/_form.html.twig', {'button_label': 'Create'}) }}
        </div>

        <div class="actions">
            <a class="btn btn-secondary" href="{{ path('app_technicien2_index') }}">Back to list</a>
        </div>
    </div>
</div>
{% endblock %}
