{% extends 'base_back_etude.html.twig' %}



{% block title %}Technicien Index{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="container mt-4 pt-5">
        <h1 class="text-center text-primary mb-4">Techniciens</h1>
        <div class="card shadow-lg p-4">
            <table class="table table-bordered table-striped">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Spécialité</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Localisation</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for technicien in techniciens %}
                    <tr>
                        <td>{{ technicien.id }}</td>
                        <td>{{ technicien.name }}</td>
                        <td>{{ technicien.prenom }}</td>
                        <td>{{ technicien.specialite }}</td>
                        <td>{{ technicien.email }}</td>
                        <td>{{ technicien.telephone }}</td>
                        <td>{{ technicien.localisation }}</td>
                        <td>
                            <a href="{{ path('app_technicien2_show', {'context': app.request.get('context'), 'id': technicien.id}) }}" class="btn btn-info btn-sm">
                                Show
                            </a>
                            <a href="{{ path('app_technicien2_edit', {'context': app.request.get('context'), 'id': technicien.id}) }}" class="btn btn-warning btn-sm">
                                Edit
                            </a>
                            <a href="{{ path('app_technicien2_delete', {'context': app.request.get('context'), 'id': technicien.id}) }}" class="btn btn-danger btn-sm">
                                Delete
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun technicien trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="text-center mt-4">
                <a href="{{ path('app_technicien2_new', {'context': app.request.get('context')}) }}" class="btn btn-success">
                    <i class="fas fa-plus"></i> Créer un nouveau technicien
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}