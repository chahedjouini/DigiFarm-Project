{% extends 'base_front.html.twig' %}

{% block title %}Etude index{% endblock %}

{% block body %}
    <h1>Etude Index</h1>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Id_user</th>
                    <th>Type_etude</th>
                    <th>Date_r</th>
                    <th>Cout</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for etude in etudes %}
                <tr>
                    <td>{{ etude.id }}</td>
                    <td>{{ etude.idUser }}</td>
                    <td>{{ etude.typeEtude }}</td>
                    <td>{{ etude.dateR ? etude.dateR|date('Y-m-d') : '' }}</td>
                    <td>{{ etude.cout }}</td>
                    <td>
                        <a href="{{ path('app_etude_show', {'id': etude.id}) }}" class="button">Show</a>
                        <a href="{{ path('app_etude_edit', {'id': etude.id}) }}" class="button">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

   <center> <a href="{{ path('app_etude_new') }}" class="button">Create New</a> </center>
{% endblock %}
