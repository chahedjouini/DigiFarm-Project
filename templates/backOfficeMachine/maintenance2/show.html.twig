{% extends 'base_back_etude.html.twig' %}

{% block title %}Maintenance{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="container mt-4 pt-5">
        <h1 class="text-center text-primary mb-4">Maintenance</h1>
        <div class="card shadow-lg p-4">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light">ID</th>
                        <td>{{ maintenance.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Date Entretien</th>
                        <td>{{ maintenance.dateEntretien ? maintenance.dateEntretien|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Coût</th>
                        <td>{{ maintenance.cout }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Température</th>
                        <td>{{ maintenance.temperature }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Humidité</th>
                        <td>{{ maintenance.humidite }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Consommation Carburant</th>
                        <td>{{ maintenance.consoCarburant }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Consommation Energie</th>
                        <td>{{ maintenance.consoEnergie }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Status</th>
                        <td>{{ maintenance.status.value }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="{{ path('app_maintenance2_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('app_maintenance2_edit', {'id': maintenance.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a href="{{ path('app_maintenance2_delete', {'id': maintenance.id}) }}" 
               class="btn btn-danger" 
               onclick="return confirm('Are you sure you want to delete this item?');">
                <i class="fas fa-trash"></i> Supprimer
            </a>
        </div>
    </div>
</div>
{% endblock %}
