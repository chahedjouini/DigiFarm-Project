{% extends 'base_back_etude.html.twig' %}

{% block title %}Technicien{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="container mt-4 pt-5">
        <h1 class="text-center text-primary mb-4">Technicien</h1>
        <div class="card shadow-lg p-4">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light">ID</th>
                        <td>{{ technicien.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Nom</th>
                        <td>{{ technicien.name }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Prénom</th>
                        <td>{{ technicien.prenom }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Spécialité</th>
                        <td>{{ technicien.specialite }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Email</th>
                        <td>{{ technicien.email }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Téléphone</th>
                        <td>{{ technicien.telephone }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Localisation</th>
                        <td>{{ technicien.localisation }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="{{ path('app_technicien2_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('app_technicien2_edit', {'id': technicien.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
        </div>

        <div class="d-flex justify-content-center mt-3">
            {{ include('backOfficeMachine/technicien2/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
