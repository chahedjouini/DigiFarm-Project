{% extends 'base_back_etude.html.twig' %}

{% block title %}Machine Details{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="container mt-4 pt-5">
        <h1 class="text-center text-primary mb-4">Machine Details</h1>
        <div class="card shadow-lg p-4">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light">ID</th>
                        <td>{{ machine.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Nom</th>
                        <td>{{ machine.nom }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Type</th>
                        <td>{{ machine.type }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Date d'Achat</th>
                        <td>{{ machine.dateAchat ? machine.dateAchat|date('Y-m-d') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Condition</th>
                        <td>{{ machine.etat.value }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Condition Précédente</th>
                        <td>{{ machine.etatPred }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="{{ path('app_machine2_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('app_machine2_edit', {'id': machine.id}) }}" class="btn btn-warning">
                <i class="fas fa-edit"></i> Modifier
            </a>
        </div>

        <div class="d-flex justify-content-center mt-3">
            {{ include('backOfficeMachine/machine2/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
