{% extends 'base_back_etude.html.twig' %}

{% block title %}Edit Machine{% endblock %}

{% block body %}
<center>
    <div class="machine-edit" style="margin-top: 20px; padding: 20px; background-color: #343a40; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <h1 style="margin-bottom: 20px; font-size: 24px; color: #fff;">Edit Machine</h1>

        <div class="form-container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'container p-4 bg-dark text-white rounded mt-5'}}) }}
                
                <div class="mb-3" style="margin-bottom: 1rem;">
                    {{ form_label(form.nom , "Nom", {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #fff;'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'style': 'width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;'}}) }}
                    {{ form_errors(form.nom, {'attr': {'class': 'text-danger', 'style': 'font-size: 0.875rem; color: #dc3545;'}}) }}
                </div>

                <div class="mb-3" style="margin-bottom: 1rem;">
                    {{ form_label(form.type , "Type", {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #fff;'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control', 'style': 'width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;'}}) }}
                    {{ form_errors(form.type, {'attr': {'class': 'text-danger', 'style': 'font-size: 0.875rem; color: #dc3545;'}}) }}
                </div>

                <div class="mb-3" style="margin-bottom: 1rem;">
                    {{ form_label(form.date_achat , "Date d'Achat", {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #fff;'}}) }}
                    {{ form_widget(form.date_achat, {'attr': {'class': 'form-control', 'style': 'width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;'}}) }}
                    {{ form_errors(form.date_achat, {'attr': {'class': 'text-danger', 'style': 'font-size: 0.875rem; color: #dc3545;'}}) }}
                </div>

                <div class="mb-3" style="margin-bottom: 1rem;">
                    {{ form_label(form.etat , "État", {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #fff;'}}) }}
                    {{ form_widget(form.etat, {'attr': {'class': 'form-control', 'style': 'width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;'}}) }}
                    {{ form_errors(form.etat, {'attr': {'class': 'text-danger', 'style': 'font-size: 0.875rem; color: #dc3545;'}}) }}
                </div>

                <div class="mb-3" style="margin-bottom: 1rem;">
                    {{ form_label(form.etat_pred , "État Précédent", {'label_attr': {'class': 'form-label', 'style': 'font-weight: bold; color: #fff;'}}) }}
                    {{ form_widget(form.etat_pred, {'attr': {'class': 'form-control', 'style': 'width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 4px;'}}) }}
                    {{ form_errors(form.etat_pred, {'attr': {'class': 'text-danger', 'style': 'font-size: 0.875rem; color: #dc3545;'}}) }}
                </div>

                <div class="text-center mt-3" style="margin-top: 20px;">
                    <button type="submit" class="btn btn-primary" style="background-color: #007bff; color: white;">{{ button_label|default('Update') }}</button>
                </div>

            {{ form_end(form) }}
        </div>

        <div class="actions" style="display: flex; gap: 10px;">
            <a class="btn btn-secondary" href="{{ path('app_machine2_index') }}" style="background-color: #6c757d; color: white;">Back to list</a>
            {{ include('backOfficeMachine/machine2/_delete_form.html.twig') }}
        </div>
    </div>
    </center>

{% endblock %}
