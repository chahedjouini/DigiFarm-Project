{% extends 'base.html.twig' %}

{% block title %}Culture index{% endblock %}

{% block body %}
    <h1>Culture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Surface</th>
                <th>Date_plantation</th>
                <th>Date_recolte</th>
                <th>Region</th>
                <th>Type_culture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for culture in cultures %}
            <tr>
                <td>{{ culture.id }}</td>
                <td>{{ culture.nom }}</td>
                <td>{{ culture.surface }}</td>
                <td>{{ culture.datePlantation ? culture.datePlantation|date('Y-m-d') : '' }}</td>
                <td>{{ culture.dateRecolte ? culture.dateRecolte|date('Y-m-d') : '' }}</td>
                <td>{{ culture.region }}</td>
                <td>{{ culture.typeCulture }}</td>
                <td>
                    <a href="{{ path('app_culture_show', {'id': culture.id}) }}">show</a>
                    <a href="{{ path('app_culture_edit', {'id': culture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_culture_new') }}">Create new</a>
{% endblock %}
